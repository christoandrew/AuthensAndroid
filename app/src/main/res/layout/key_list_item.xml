<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:background="@drawable/row_selector"
    android:layout_height="wrap_content"
    android:id="@+id/key_list_item">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Penthouse Front Door"
        android:id="@+id/lock_name"
        android:textSize="7pt"
        android:textStyle="bold"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last used by christoandrew"
        android:id="@+id/latest_lock_event"
        android:layout_below="@+id/lock_name"
        android:layout_alignStart="@+id/lock_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-10-10"
        android:id="@+id/last_used_date"
        android:layout_below="@+id/latest_lock_event"
        android:layout_alignStart="@+id/latest_lock_event" />

    <com.mikepenz.iconics.view.IconicsImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/lock_status_locked"
        android:visibility="gone"
        android:src="@drawable/ic_locked"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <com.mikepenz.iconics.view.IconicsImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/lock_status_unlocked"
        android:visibility="gone"
        android:src="@drawable/ic_unlocked"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>